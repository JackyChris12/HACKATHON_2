<!DOCTYPE html>
<html>
<head>
  <title>Farm Activities Log</title>
  <style>
    body { font-family: Arial; padding: 40px; background: #f0f2f5; }
    h2 { color: #2f3542; }
    form, table { background: white; padding: 20px; margin-bottom: 30px; border-radius: 8px; }
    textarea { width: 100%; height: 80px; }
    select, button, textarea { margin-top: 10px; padding: 10px; }
    table { width: 100%; border-collapse: collapse; }
    th, td { border: 1px solid #ccc; padding: 12px; text-align: left; }
    th { background-color: #2f3542; color: white; }
  </style>
</head>
<body>

  <h2>Farm Activities Log</h2>

  <form action="/farmer/activities" method="POST">
    <label for="description">What did you do today?</label><br>
    <textarea name="description" required></textarea><br>
    
    <label for="category">Log Category:</label><br>
    <select name="category" required>
      <option value="daily">Daily</option>
      <option value="weekly">Weekly</option>
      <option value="monthly">Monthly</option>
    </select><br>
    
    <button type="submit">Add Activity</button>
  </form>

  <h3>Your Logged Activities</h3>
  <table>
    <tr>
      <th>Description</th>
      <th>Category</th>
      <th>Date</th>
    </tr>
    <% activities.forEach(a => { %>
      <tr>
        <td><%= a.description %></td>
        <td><%= a.category %></td>
        <td><%= new Date(a.created_at).toLocaleString() %></td>
      </tr>
    <% }) %>
  </table>

</body>
</html>
